<h3>New Contract</h3>

<%= form_for @contract do |f| %>
  <br />

  <%= f.label :show_name %>
  <%= f.text_field :show_name %>

  <%= f.label :opening_date %>
  <%= f.date_field :opening_date %><br />

  <%= f.label :fee %>
  <%= f.number_field :fee %><br />

  <%= f.label :company %>:
  <%= f.collection_select :company, @companies, :id, :name %><br />

  <%= f.label :venue %>:
  <%= f.text_field :venue, list: "venues" %>
  <datalist id="venues">
    <% @venues.each do |v| %>
    <option value="<%= v.name %>">
    <% end %>
  </datalist><br />

  <%= f.label :musical %>:
  <%= f.check_box :musical %><br />

  <%= f.submit "Submit New Contract." %>
<% end %>
