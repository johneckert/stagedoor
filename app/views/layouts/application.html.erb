<!DOCTYPE html>
<html>
  <head>
    <title>StageDoor</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src='https://www.google.com/jsapi'></script>
                        <!--   B O O T   S T R A P -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  </head>

  <body>
    <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
          <h1>
            <span class="logo_reg navbar-brand">Stage</span>
            <span class="logo_invert navbar-brand">Door</span>
          </h1>
      </div>
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Contracts", contracts_path %></li>
        <li><%= link_to "Companies", companies_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><%= link_to "#{current_user.username}", root_path %></li>
          <li><%= link_to "logout", logout_path, method: 'post' %></li>
        <% else %>
          <li><%= link_to "login", login_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>

    <!-- <h5><% if current_user %>
          <%= "Logged in -> #{current_user.username}" %> <br />
          <%= link_to "Logout?", logout_path, method: 'post' %>
        <% else %>
          <%= link_to "login", login_path %>
        <% end %>
    </h5> -->
  </div>
    <%= yield %>
  </body>
</html>
